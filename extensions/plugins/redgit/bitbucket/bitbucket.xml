<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="redgit" method="upgrade">
	<name>PLG_REDGIT_BITBUCKET</name>
	<creationDate>February 2017</creationDate>
	<author>redCOMPONENT</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>Copyright (C) 2015 - 2017 redCOMPONENT.com. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later, see LICENSE.</license>
	<version>1.0.2</version>
	<description>PLG_REDGIT_BITBUCKET_XML_DESCRIPTION</description>

	<files>
		<folder>language</folder>
		<filename>LICENSE</filename>
		<filename plugin="bitbucket">bitbucket.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="bitbucket_enabled"
					type="radio"
					default="1"
					class="btn-group btn-group-yesno"
					label="PLG_REDGIT_BITBUCKET_PARAM_FIELD_GIT_BITBUCKET_ENABLED"
					description="PLG_REDGIT_BITBUCKET_PARAM_FIELD_GIT_BITBUCKET_ENABLED_DESC"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					type="text"
					name="bitbucket_url"
					class="input-xxlarge"
					label="PLG_REDGIT_BITBUCKET_PARAM_FIELD_GIT_BITBUCKET_URL"
					hint="PLG_REDGIT_BITBUCKET_PARAM_FIELD_GIT_BITBUCKET_URL_HINT"
				/>
			</fieldset>
		</fields>
	</config>

</extension>
